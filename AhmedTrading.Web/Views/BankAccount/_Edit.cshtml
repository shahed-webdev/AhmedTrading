@using AhmedTrading.Repository
@model BankAccountViewModel
@{
    Layout = null;
}

    <div class="modal-dialog cascading-modal" role="document">
        <div class="modal-content">
            <div class="modal-header blue-bg white-text">
                <h4 class="m-0"><i class="fas fa-plus-circle"></i> Update Bank Account</h4>
                <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form data-ajax-update="#UpdateModal" data-ajax="true" data-ajax-url="/BankAccount/Edit" data-ajax-method="post" data-ajax-success="onUpdateSuccess">
                    <input asp-for="BankAccountId" type="hidden" />

                    <div class="md-form">
                        <label asp-for="BankName" class="active">Bank Name</label>
                        <input asp-for="BankName" class="form-control" required />
                        <span asp-validation-for="BankName"></span>
                    </div>
                    <div class="md-form">
                        <label asp-for="AccountName" class="active">Account Name</label>
                        <input asp-for="AccountName" class="form-control" required />
                        <span asp-validation-for="AccountName"></span>
                    </div>
                    <div class="md-form">
                        <label asp-for="AccountNumber" class="active">Account Number</label>
                        <input asp-for="AccountNumber" class="form-control" required />
                        <span asp-validation-for="AccountNumber"></span>
                    </div>
                    <div class="text-center mt-1-half">
                        <button type="submit" class="btn blue-bg-btn mb-1 waves-effect waves-light">Save <i class="fas fa-check ml-1"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>    
