@using AhmedTrading.Repository
@model ProductUpdateModel
@{
    ViewData["Title"] = "Update Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-10 mx-auto">
                <h4 class="my-3 page-header">Update Product - <small>@Model.ProductName</small></h4>
                <div class="card card-body p-4">
                    <form asp-action="UpdateProduct">
                        <input type="hidden" name="ProductId" value="@Model.ProductId">

                        <div class="md-form">
                            <select name="ProductBrandId" id="selectProductBrand" asp-items="ViewBag.ProductBrand" class="mdb-select m-0" required>
                                <option value="" selected>Select Brand</option>
                            </select>
                        </div>

                        <div class="md-form my-5">
                            <input asp-for="ProductName" class="form-control" required />
                            <label for="ProductName">Product Name</label>
                            <span asp-validation-for="ProductName"></span>
                        </div>
                        <div class="md-form my-5">
                            <input asp-for="SellingUnitPrice" type="number" step="0.01" min="0" class="form-control" required />
                            <label for="SellingUnitPrice">Selling Unit Price</label>
                            <span asp-validation-for="SellingUnitPrice"></span>
                        </div>

                        <div class="md-form">
                            <input asp-for="Stock" class="form-control" type="number" step="0.01" required />
                            <label for="Stock">Stock</label>
                            <span asp-validation-for="Stock"></span>
                        </div>

                        <div class="mb-3">
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" asp-for="UnitType" value="Ton" class="custom-control-input" id="1" name="UnitType">
                                <label class="custom-control-label" for="1">Ton</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" asp-for="UnitType" value="Ream" class="custom-control-input" id="2" name="UnitType">
                                <label class="custom-control-label" for="2">Ream</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <input type="submit" value="Update Product" class="btn blue-bg-btn btn-rounded" />
                            <a asp-action="AddProduct">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>     

@section Scripts{
    <script>
        $(function() {
            // Material Select Initialization
            $('.mdb-select').materialSelect();
        });
    </script>
}
