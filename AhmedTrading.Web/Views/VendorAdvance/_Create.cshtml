@using AhmedTrading.Repository
@model VendorAdvanceAddViewModel
@{
    Layout = null;
}

    <div class="modal-dialog cascading-modal" role="document">
        <div class="modal-content">
            <div class="modal-header blue-bg white-text">
                <h4 class="m-0"><i class="fas fa-plus-circle"></i> Add Commission</h4>
                <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form data-ajax-update="#InsertModal" data-ajax="true" data-ajax-url="/VendorAdvance/Create" data-ajax-method="post" data-ajax-success="onCreateSuccess">
                    <div class="md-form">
                        <input asp-for="Advance" type="number" required class="form-control" />
                        <label asp-for="Advance">Advance Amount</label>
                        <span asp-validation-for="Advance"></span>
                    </div>
                    <div class="md-form">
                        <select name="PaymentMethod" class="form-control" required>
                            <option value="" selected>[ Payment Method ]</option>
                            <option>Cash</option>
                            <option>Bank</option>
                            <option>Cheque</option>
                            <option>bkash</option>
                        </select>
                    </div>
                    <div class="md-form">
                        <input asp-for="AdvanceDate" required type="date" class="form-control" />
                        <label asp-for="AdvanceDate">Advance Date</label>
                        <span asp-validation-for="AdvanceDate"></span>
                    </div>
                    <div class="md-form">
                        <input asp-for="AdvanceDetails" class="form-control" />
                        <label asp-for="AdvanceDetails">Advance Details</label>
                    </div>

                    <input id="hiddenVendorId" type="hidden" name="VendorId" />
                    <div class="text-center mt-1-half">
                        <button type="submit" class="btn blue-bg-btn mb-1 waves-effect waves-light">Create <i class="fas fa-check ml-1"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div> 
